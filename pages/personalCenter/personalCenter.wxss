page{
	background-color: #fff;
}
.personal-top-img{
	width: 100%;
	height: 332rpx;
}
.user-photo-container{
	position: relative;
	left: 50%;
	margin-left:-82rpx;
	margin-top: -100rpx;
	margin-bottom: 24rpx;
	width: 164rpx;
	height: 164rpx;
	/* background-color: #fff; */
	background-color: #000;
	border-radius: 50%;
	
}
.user-img{
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.user-info{
	text-align: center;	
}
.user-name{
	font-size: 36rpx;
	color: #333;
	margin-bottom: 20rpx;
}
.user-menu-list{
	margin-top: 60rpx;
}
.need-login-model{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2333;
    background: rgba(5, 12, 41, .85);
    
}
.title-image{
	display: block;
	margin: 0 auto;
	width: 234rpx;
	height: 66rpx;
}

.need-login-dialog{
	position: absolute;
	top: 308rpx;
	left: 50%;
	padding-top: 88rpx;
	margin-left: -325rpx;
	width: 650rpx;
	height: 820rpx;
	background: #fff;
	border-radius: 8rpx;
	z-index: 333;
}
.close-icon{
	position: absolute;
	top: 14rpx;
	right: 14rpx;
	width: 64rpx;
	height: 64rpx;
}
.close-icon>image{
	display: block;
	width: 100%;
	height: 100%;
}
.login-info-text{
	text-align: center;
	color: #bbbbbb;
	margin-top: 36rpx;
}
.login-modle-bg{
	display: block;
	margin: 60rpx auto 96rpx;
	width: 484rpx;
	height: 258rpx;
	
}

.need-login-btn-group{
	display: flex;
	width: 500rpx;
	margin: 0 auto;
	justify-content: space-around;
}
.need-login-btn{
	width: 220rpx;
	height: 94rpx;
	text-align: center;
	border-radius: 42rpx;
	background: #fff;
	font-size: 32rpx;
}
.need-login-btn.not{
	border: 1px solid #b3b3b3;
	color: #b3b3b3;
}
.need-login-btn.allow{
	border: 1px solid transparent;
	color: #fff;
	background: rgba(0,217,255,1);
}