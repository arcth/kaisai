

.team-list-item{
    background-color: #fff;
    padding: 30rpx 40rpx 40rpx;
    margin-bottom: 20rpx;
}
.team-img{
    margin-right: 40rpx;
    /* flex-basis: 120rpx; */
    width: 120rpx;
    height: 120rpx;
    
}

.team-img image{
    display: block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 12rpx;
}
.team-name{
    color: #2f2f2f;
    font-weight: bold;
}
.add-to-team{
    color: rgba(1,33,157,.5);
    font-size: 60rpx;
}

.bottom-line .b-inline:first-child{
    margin-right: 60rpx;
}
.team-record{
    width: 100%;
    padding: 20rpx 60rpx;
    background-color: #fff;
    text-align: center;
}
.notice-line{
    padding:10rpx 50rpx;
    line-height:72rpx ;
    color: #999;
}
.notice-info{
    padding:32rpx 50rpx;
    background-color: #fff;
    color: #2f2f2f;
    height: 140rpx;
    line-height: 40rpx;
    overflow: hidden;
}
.notice-info.height-auto{
    height: auto;
}
.notice-info .over-text{
    overflow: hidden;
    height: 100%;
    width: 100%;
}

button.join-team{
    height: 84rpx;
    border-radius: 42rpx;
    color: #fff; 
    background:linear-gradient(270deg,rgba(0,217,255,1) 0%,rgba(0,52,255,1) 100%);
    width: 660rpx;
    position: fixed;
    bottom: 24rpx;
    left: 50%;
    margin-left: -330rpx;
}