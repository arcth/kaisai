page{
  min-height: 100%;
  height:100%;
  
}
.share-bg{
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: -1;
}
.inital-page{
	width: 560rpx;
	margin: 200rpx auto 60rpx;
	position: relative;
	min-height: 800rpx;
	padding: 46rpx 36rpx;
	border-radius: 30rpx;
	color: #fff;
}
.inital-page::before{
	content: '';
	display: block;
	background:linear-gradient(180deg,rgba(238,10,10,1) 0%,rgba(255,190,58,1) 100%);
	mix-blend-mode: multiply;
	height: 100%;
	width: 100%;
	position: absolute;
	border-radius: 30rpx;
	z-index: -1;
	top: 0;
	left: 0;
}
.match-info{
	position: relative;
	
}
.right-icon{
	position: absolute;
	right: 14rpx;
	top: 52rpx;
	width: 64rpx;
	height: 64rpx;
	
}
.inital-page .title-text{
	font-size: 44rpx;
	font-weight: bold;
	letter-spacing:3rpx ;
	margin-bottom: 30rpx;
	width: 80%;
	word-break: break-all;
}
.title-text image{
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	border:none
}
.user-list{
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
	min-height: 260rpx;
	
}
.user-list .user-list-item{
	display: block;
	width: 80rpx;
	height: 80rpx;
	margin-right: 22rpx;
	margin-bottom: 36rpx;
	border-radius: 40rpx;
	background-color: #fff;
}
.user-list .user-list-item image{
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 40rpx;
}
.user-list .user-list-item:nth-child(5n+5){
	margin-right: 0;
}
.regsiter-text{
	color: rgba(255,255,255,.65);
	margin-bottom: 48rpx;
}
.text-inline{
	font-size: 32rpx;
	text-align: left;
	margin-bottom: 30rpx;
	word-break: break-all;
}
.padding-bottom-xxl{
  padding-bottom: 60rpx;
}

.btn-blue-gradient{
	display: block;
	width: 100%;
	height: 84rpx;
	line-height: 84rpx;
	color: #fff;
	text-align: center;
	border-radius: 42rpx;
	font-size: 32rpx;
	background:linear-gradient(270deg,rgba(0,217,255,1) 0%,rgba(0,52,255,1) 100%);
	
}
.share-button-text{
	display: block;
	width: 100%;
	height: 84rpx;
	background-color: transparent;
	border: none;
	text-decoration: underline;
	color: #fff;
	font-size: 30rpx;
	margin-top: 40rpx;
}
.share-button-text::after{
	border:none;
}
.game-count .user-icon{
	display: inline-block;
	width: 22rpx;
	height: 24rpx;
	margin-right: 8rpx;
}
.index {
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  flex-direction:columnl;
  justify-content: flex-start;
  padding:0 10rpx;
  box-sizing: border-box;
}
 
.index view .text {
  display: inline-block;
  width: 50px;
  height: 50px;
  background: greenyellow;
  border-radius: 50%;
}
view .text:first-of-type {
  transform: translateX(0px);
}


.need-login-model{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 2333;
	background: rgba(5, 12, 41, .85);
	
}
.title-image{
display: block;
margin: 0 auto;
width: 234rpx;
height: 66rpx;
}

.need-login-dialog{
position: absolute;
top: 308rpx;
left: 50%;
padding-top: 88rpx;
margin-left: -325rpx;
width: 650rpx;
height: 820rpx;
background: #fff;
border-radius: 8rpx;
z-index: 333;
}
.close-icon{
position: absolute;
top: 14rpx;
right: 14rpx;
width: 64rpx;
height: 64rpx;
}
.close-icon>image{
display: block;
width: 100%;
height: 100%;
}
.login-info-text{
text-align: center;
color: #bbbbbb;
margin-top: 36rpx;
}
.login-modle-bg{
display: block;
margin: 60rpx auto 96rpx;
width: 484rpx;
height: 258rpx;

}

.need-login-btn-group{
display: flex;
width: 500rpx;
margin: 0 auto;
justify-content: space-around;
}
.need-login-btn{
width: 220rpx;
height: 94rpx;
text-align: center;
border-radius: 42rpx;
background: #fff;
font-size: 32rpx;
}
.need-login-btn.not{
border: 1px solid #b3b3b3;
color: #b3b3b3;
}
.need-login-btn.allow{
border: 1px solid transparent;
color: #fff;
background: rgba(0,217,255,1);
}