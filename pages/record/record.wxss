/* pages/record/record.wxss */
/* pages/roundResult/roundRresult.wxss */
.match-user{
	position: relative;
	height: 72rpx;
}


.match-card-container{
  padding: 40rpx 30rpx;
  color: #fff;
}
.match-card{
  width: 100%;
  height: 325rpx;
  padding:46rpx 0 0;
  border-radius: 12rpx;
  position: relative;
  background-size: cover;
  background-repeat: no-repeat;
}
.user-content{
	width: 45%;
	height: 100%;
	text-align: center;
}

.user-content .match-user-item{
	width: 68rpx;
	height: 68rpx;
	display: inline-block;
	margin: 0 10rpx 24rpx;
}
.user-content .match-user-item image{
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
image.right-icon{
position: absolute;
right: 14rpx;
top: 50%;
width: 64rpx;
height: 64rpx;
margin-top: -32rpx;
}
.match-title{
  padding: 34rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.match-round{
  font-size: 40rpx;
  font-weight: bold;
  padding: 0 30rpx;
  color: #333;
}
.match-tag{
  position: absolute;
  right: 0;
  top: 0;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  font-weight: bold;
  padding: 0 20rpx;
  color: #fff;
  background:linear-gradient(180deg,rgba(248,46,27,1) 0%,rgba(254,137,8,1) 100%);
  border-radius:0px 6px 0px 8px;
}
.title-bar{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: #979797;
}
.cu-list.title-bar{
  margin-bottom: 20rpx;
}
.cu-list.title-bar.menu>.cu-item {
  background: transparent;
  padding: 0;
}
.cu-bar .action:last-child {
  margin-right: 0;
}
.cu-list.menu>.cu-item .content {
  flex: 1;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  color: #000;
  font-weight: bold;
}
.action-text{
  display: inline-block;
  width: 20%;
  text-align: center;
  color: #000;
}
.action-title-text{
  text-align: center;
  display: inline-block;
  width: 20%;

}
.title-action-name{
  flex: 1 0 auto;
}
.title-action-item{
  width: 64%;
  min-width: 220rpx;
}
.cu-list.menu>.cu-item .content .user-name-text{
  color: #000;
  white-space: nowrap;
  padding-right: 60rpx;
}


button.bottom-dis{
  width: 100%; 
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 42rpx;
  color: #fff;
  background:linear-gradient(270deg,rgba(0,217,255,1) 0%,rgba(0,52,255,1) 100%);
}