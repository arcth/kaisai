.card-modal{
	position: fixed;
	right: 0;
	left: 0;
	bottom: 0;
	z-index: 233;
	background-color: rgba(5,12,41,.6);
}
.card-modal-content{
	position: absolute;
	top: 60rpx;
	left:50%;
	margin-left:-325rpx;
	width: 650rpx;
	height: 820rpx;
	background:rgba(238,54,57,1);
	border-radius: 8rpx;
}
.card-container{
	position: relative;
	width: 100%;
	
}
.card-box{
	width: 130rpx;
	height: 172rpx;
	position: relative;
	transition: all 1s ease;
}
.card-box.active{
	transform: rotateY(180deg);
}
.card-box .card-item{
	width: 100%;
	height: 100%;
	display: block;
}
.card-box.active .card-down{
	z-index: 10;
}
.card-box .card-up{	
	position: absolute;
	z-index: 3;
}
.card-box .card-down{
	position: absolute;
	transform: rotateY(180deg);
	z-index: 2;
}