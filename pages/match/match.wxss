.match-card-container{
    padding: 24rpx 30rpx;
    color: #fff;
}
.match-card{
    width: 100%;
    min-height: 240rpx;
    padding:62rpx  66rpx 30rpx;
    border-radius: 12rpx;
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
}
image.right-icon{
	position: absolute;
	right: 14rpx;
	top: 50%;
	width: 64rpx;
	height: 64rpx;
	margin-top: -32rpx;
}
.match-title{
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 26rpx;
    color: var(--whiteGray);
}
.match-round{
    font-size: 40rpx;
    font-weight: bold;
}
.match-tag{
    position: absolute;
    right: 0;
    top: 0;
    height: 62rpx;
    line-height: 62rpx;
    font-size: 26rpx;
    font-weight: bold;
    padding: 0 20rpx;
    color: #fff;
    background:linear-gradient(180deg,rgba(248,46,27,1) 0%,rgba(254,137,8,1) 100%);
    border-radius:0px 6px 0px 8px;
}
.title-bar{
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    color: #979797;
}
.cu-list.title-bar{
    margin-bottom: 20rpx;
}
.cu-list.title-bar.menu>.cu-item {
    background: transparent;
    padding: 0;
}
.cu-bar .action:last-child {
    margin-right: 0;
}
.cu-list.menu>.cu-item .content {
    flex: 1;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.action-text{
    display: inline-block;
    width: 20%;
    text-align: center;
    color: #000;
}
.action-title-text{
    text-align: center;
    display: inline-block;
    width: 20%;

}
.title-action-name{
    flex: 1 0 auto;
}
.title-action-item{
    width: 64%;
    min-width: 220rpx;
}
.cu-list.menu>.cu-item .content .user-name-text{
    color: #000;
    white-space: nowrap;
    padding-right: 60rpx;
}
.cu-list.menu>.cu-item .action {
    width: 64%;
    min-width: 220rpx;
}
