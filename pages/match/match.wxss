/* pages/match/match.wxss */
.match-top-contaienr{
	width: 100%;
	padding: 24rpx 30rpx;
}
.match-card{
	position:relative;
	border-radius: 12rpx;
	padding: 40rpx 46rpx 0;
	width: 100%;
	height: 240rpx;
	background-size: 100%;
}
.match-tag{
	position: absolute;
	right: 0;
	top: 0;
	padding: 0 20rpx;
	height: 62rpx;
	line-height: 62rpx;
	text-align: center;
	border-radius:0px 12rpx 0px 16rpx;
	font-size: 26rpx;
	font-weight: bold;
	color: #fff;
	background:linear-gradient(180deg,rgba(248,46,27,1) 0%,rgba(254,137,8,1) 100%);
}
.match-title{
	font-size: 32rpx;
	margin-bottom: 26rpx;
}