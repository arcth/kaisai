/* pages/match/match.wxss */
.match-card-container{
    padding: 24rpx 30rpx;
    color: #fff;
}
.match-card{
    width: 100%;
    min-height: 240rpx;
    padding:62rpx  46rpx 0;
    border-radius: 12rpx;
    position: relative;
    background-size: 100%;
    background-repeat: no-repeat;
}
.match-title{
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 26rpx;
    color: var(--whiteGray);
}
.match-round{
    font-size: 40rpx;
    font-weight: bold;
}
.match-tag{
    position: absolute;
    right: 0;
    top: 0;
    height: 62rpx;
    line-height: 62rpx;
    font-size: 26rpx;
    font-weight: bold;
    padding: 0 20rpx;
    color: #fff;
    background:linear-gradient(180deg,rgba(248,46,27,1) 0%,rgba(254,137,8,1) 100%);
    border-radius:0px 6px 0px 8px;
}
.title-bar{
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    color: #979797;
}
.cu-list.title-bar{
    margin-bottom: 20rpx;
}
.cu-list.title-bar.menu>.cu-item {
    background: transparent;
    padding: 0;
}
.cu-bar .action:last-child {
    margin-right: 0;
}
.cu-list.menu>.cu-item .content {
    flex: 1 0 auto;
}
.action-text{
    display: inline-block;
    width: 33.33%;
    text-align: center;
    color: #000;
}
.action-title-text{
    text-align: center;
    display: inline-block;
    width: 33.33%;

}
.title-action-name{
    flex: 1 0 auto;
}
.title-action-item{
    width: 40%;
    min-width: 220rpx;
}
.cu-list.menu>.cu-item .content .user-name-text{
    color: #000;
    white-space: nowrap;
    padding-right: 60rpx;
}
.cu-list.menu>.cu-item .action {
    width: 40%;
    min-width: 220rpx;
}