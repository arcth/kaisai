<!--pages/grouping/auto/auto.wxml-->
<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">比赛结果</view>
</cu-custom>
<image wx:if="{{imageBaseUrl}}" src="{{imageBaseUrl}}/group1/M00/4C/35/wKhmBV8T0omAO3DLAAPm-UdZRZ0194.png" class="share-bg" style="top:{{CustomBar}}px"></image>

<view style="margin-top:{{CustomBar}}px">
<view class="auto-page">
	<view class="match-text-container">
		<view class="match-title">{{game.name}}</view>
		<view class="match-sub-title">第  {{round.rounds}} 轮</view>
	</view>
	<view class="match-group">
		<view class="match-group-item">
			<view class="group-name">红队队员</view>
			<view class="match-user-info">
				<image wx:for="{{redteam}}" wx:key="item" src="{{item.user.avatarurl}}" mode='aspectFill'></image>
			</view>
		</view>
		
	</view>
	<image src="../../images/vb.png" class="vb-img"></image>
	<view class="btn-group">
		<button  bindtap="torecord" class="btn-group-item">查看赛场统计</button>
		
	</view>
</view>
</view>